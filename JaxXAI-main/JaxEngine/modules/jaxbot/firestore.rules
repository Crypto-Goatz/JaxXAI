rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // User profiles - users can only read/write their own profile
    match /artifacts/{appId}/users/{uid}/profile/{document=**} {
      allow read, write: if isOwner(uid);
    }
    
    // User trading data - users can only access their own data
    match /artifacts/{appId}/users/{uid}/trading/{document=**} {
      allow read, write: if isOwner(uid);
    }
    
    // User watchlists - users can only access their own watchlists
    match /artifacts/{appId}/users/{uid}/watchlists/{document=**} {
      allow read, write: if isOwner(uid);
    }
    
    // User strategies - users can only access their own strategies
    match /artifacts/{appId}/users/{uid}/strategies/{document=**} {
      allow read, write: if isOwner(uid);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
